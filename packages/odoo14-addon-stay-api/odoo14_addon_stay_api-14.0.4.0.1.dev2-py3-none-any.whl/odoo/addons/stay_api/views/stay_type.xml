<odoo>

<record id="stay_type_form" model="ir.ui.view">
    <field name="model">stay.type</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                <group name="main">
                    <field name="name" />
                    <field name="update_url" />
                    <field name="active" invisible="1" />
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="stay_type_tree" model="ir.ui.view">
    <field name="model">stay.type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="sequence" widget="handle" />
            <field name="name" decoration-bf="1" />
            <field name="update_url" optional="show" />
        </tree>
    </field>
</record>

<record id="stay_type_search" model="ir.ui.view">
    <field name="model">stay.type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <separator />
            <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
        </search>
    </field>
</record>

<record id="stay_type_action" model="ir.actions.act_window">
    <field name="name">Types</field>
    <field name="res_model">stay.type</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="stay_type_menu"
        action="stay_type_action"
        sequence="60"
        parent="stay.stay_configuration"
    />

</odoo>
