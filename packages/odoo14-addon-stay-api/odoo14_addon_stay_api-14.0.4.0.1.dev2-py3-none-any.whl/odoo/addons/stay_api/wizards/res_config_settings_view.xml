<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="stay.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <div name="stay_default_refectory" position="after">
            <div class='row mt16 o_settings_container' name="stay_controller_company">
                <div
                        class='col-12 col-lg-12 o_setting_box'
                        id="stay_controller_company"
                    >
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span
                                class="o_form_label"
                            >Default Company for Stays created from Web Form</span>
                        <div class="content-group">
                            <field name="stay_controller_company_id" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </field>
</record>

</odoo>
