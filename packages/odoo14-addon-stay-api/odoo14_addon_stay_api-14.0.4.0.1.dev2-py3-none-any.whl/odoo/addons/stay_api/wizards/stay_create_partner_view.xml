<odoo>

                  <record id="stay_create_partner_form" model="ir.ui.view">
                          <field name="model">stay.create.partner</field>
                          <field name="arch" type="xml">
                                  <form>
                                          <group name="main">
                                                  <field name="stay_id" invisible="1" />
                                                  <field name="title_id" />
                                                  <field name="firstname" />
                                                  <field name="lastname" />
                                                  <field name="email" />
                                                  <field name="phone" />
                                                  <field name="mobile" />
                                                  <label
                        for="street"
                        string="Address"
                    />
                                                <div class="o_address_format">
                                                    <field
                            name="street"
                            class="o_address_street"
                        />
                                <field name="street2" class="o_address_street" />
                                <field
                            name="city"
                            placeholder="City"
                            class="o_address_city"
                        />
                                <field
                            name="zip"
                            placeholder="ZIP"
                            class="o_address_zip"
                        />
                                <field
                            name="country_id"
                            placeholder="Country"
                            class="o_address_country"
                            options='{"no_open": True, "no_create": True}'
                        />
                            </div>
                                                  <button
                        name="create_partner"
                        type="object"
                        colspan="2"
                        class="btn-primary"
                        string="Create Partner"
                    />
                                                  <field name="update_partner_id" />
                                                  <field
                        name="update_partner_email"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />

                                                  <field
                        name="update_partner_phone"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <field
                        name="update_partner_mobile"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <label
                        for="update_partner_street"
                        string="Current Address"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <div
                        class="o_address_format"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    >
                                                    <field
                            name="update_partner_street"
                            class="o_address_street"
                        />
                                <field
                            name="update_partner_street2"
                            class="o_address_street"
                        />
                                <field
                            name="update_partner_city"
                            placeholder="City"
                            class="o_address_city"
                        />
                                <field
                            name="update_partner_zip"
                            placeholder="ZIP"
                            class="o_address_zip"
                        />
                                <field
                            name="update_partner_country_id"
                            placeholder="Country"
                            class="o_address_country"
                            options='{"no_open": True, "no_create": True}'
                        />
                            </div>
                                                  <field
                        name="update_email"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <field
                        name="update_phone"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <field
                        name="update_mobile"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <field
                        name="update_address"
                        attrs="{'invisible': [('update_partner_id', '=', False)]}"
                    />
                                                  <button
                        name="update_partner"
                        type="object"
                        colspan="2"
                        class="btn-primary"
                        string="Update Partner"
                    />

                                          </group>
                                          <footer>
                                                  <button
                        special="cancel"
                        string="Cancel"
                        class="btn-default"
                    />
                                          </footer>
                                  </form>
                          </field>
                          </record>

                          <record
        id="stay_create_partner_action"
        model="ir.actions.act_window"
    >
                          <field name="name">Create or Update Partner</field>
        <field name="res_model">stay.create.partner</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
</record>

          </odoo>
