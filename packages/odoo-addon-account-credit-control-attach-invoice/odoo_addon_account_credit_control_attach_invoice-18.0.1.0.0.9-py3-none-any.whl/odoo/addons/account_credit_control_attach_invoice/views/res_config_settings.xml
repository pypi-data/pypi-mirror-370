<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <block id="credit_control" position="inside">
                <setting id="credit_ctrl_report_to_attach" string="Report Attachment">
                    <div class="content-group">
                        <div class="row mt8">
                            <label
                                for="credit_control_report_to_attach_id"
                                class="col-lg-4 o_light_label"
                                string="Report to attach to credit control summary"
                            />
                            <field
                                name="credit_control_report_to_attach_id"
                                domain="[('model', '=', 'account.move')]"
                            />
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
