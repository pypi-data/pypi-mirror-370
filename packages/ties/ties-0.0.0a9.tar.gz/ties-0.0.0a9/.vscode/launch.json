{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Python (venv)",
			"justMyCode": false,
			"type": "debugpy",
			"request": "launch",
			"program": "${fileDirname}/${fileBasenameNoExtension}.py",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart",
			"presentation": {
				"hidden": false
			}
		},
		{
			"name": "Debug Python (docker compose)",
			"justMyCode": false,
			"type": "debugpy",
			"request": "attach",
			"preLaunchTask": "Start Debugpy server (docker compose)",
			"postDebugTask": "Remove Debugpy server (docker)",
			"connect": {
				"host": "${workspaceFolderBasename}_debug_${fileBasenameNoExtension}",
				"port": 5678
			},
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
