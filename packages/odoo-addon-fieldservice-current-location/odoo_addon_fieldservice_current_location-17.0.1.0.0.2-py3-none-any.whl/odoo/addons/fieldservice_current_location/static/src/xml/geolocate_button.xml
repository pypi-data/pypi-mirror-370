    <t t-inherit="web.FormView" t-name="fieldservice_current_location.GeolocateButton">
   <xpath expr="//t[@t-set-slot='layout-buttons']" position="inside">
        <button class="btn btn-primary" t-on-click="geolocate">
            <i class="control-button fa fa-map-marker" style="margin-right: 6px;" />
