include LICENSE
include README.md
include requirements.txt
include pytest.ini

# Include all Python files in the mcard package
recursive-include mcard *.py

# Include other non-Python files
recursive-include mcard/app/templates *
recursive-include mcard/app/static *
recursive-include mcard/app/pages *
recursive-include mcard/config *.json
recursive-include mcard/model/clm *.json

# Exclude development directories
prune tests
prune docs
prune examples
prune astro-frontend
