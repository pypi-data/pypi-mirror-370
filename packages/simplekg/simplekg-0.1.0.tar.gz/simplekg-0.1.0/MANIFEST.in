include README.md
include LICENSE
include MANIFEST.in
include pyproject.toml
include setup.py

# Include documentation and ontology files
recursive-include src/simplekg *.txt
recursive-include src/simplekg *.html
recursive-include src/simplekg *.md

# Include tests
recursive-include tests *.py
recursive-include tests *.ipynb

# Exclude unnecessary files
exclude .env
exclude .DS_Store
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.orig
recursive-exclude * *.rej
recursive-exclude * .git*
recursive-exclude * .venv*
