{
    "name": "py-kit",
    "image": "artifacts.iflytek.com/docker-private/aiaas/venv:ubuntu22.04-cuda12.8",
    "mounts": [
        "source=/mnt,target=/mnt,type=bind",
        "source=/data1/sqjian/.ssh,target=/root/.ssh,type=bind",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=uv_cache,target=/root/.cache/uv,type=volume",
        "source=uv_python,target=/root/.local/share/uv/python,type=volume",
        "source=vscode_extensions,target=/root/.vscode-server/extensions,type=volume",
        "source=models,target=/workspaces/py-kit/models,type=volume"
    ],
    "remoteUser": "root",
    "runArgs": [
        "--gpus=all",
        "--ulimit",
        "core=0",
        "--ulimit",
        "nproc=65535",
        "--ulimit",
        "nofile=65535:65535",
        "--privileged",
        "--ipc=host",
        "--net=host",
        "--name=py-kit_devcontainer"
    ]
}