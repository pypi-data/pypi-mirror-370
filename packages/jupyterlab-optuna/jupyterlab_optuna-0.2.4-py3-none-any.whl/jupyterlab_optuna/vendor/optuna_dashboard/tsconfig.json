{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./public/",
    "paths": {
      "plotly.js-dist-min": ["node_modules/@types/plotly.js"]
    },
    "noImplicitAny": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "strict": true
  },
  "files": [
    "./ts/index.tsx"
  ],
  "include": [
    "./ts/types/**/*",
    "./ts/tests/**/*"
  ],
  "types": ["node"]
}
