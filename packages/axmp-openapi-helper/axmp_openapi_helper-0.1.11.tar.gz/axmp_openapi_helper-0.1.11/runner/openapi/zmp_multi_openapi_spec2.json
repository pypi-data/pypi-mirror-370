{
    "backends": [
        {
            "server_name": "zcp-alert-backend",
            "endpoint": "https://api.ags.cloudzcp.net",
            "base_path": "/api/alert/v1",
            "tls_verify": false,
            "timeout": 10,
            "spec_file_path": "runner/openapi/zcp/zcp_alert_backend_openapi_spec.json",
            "auth_config": {
                "type": "ApiKey",
                "api_key_name": "X-Access-Key",
                "api_key_value": "zmp-09bae73d-9f59-491a-ae06-7747e8f79883"
            },
            "tool_config": {
                "api_maps": [
                    {
                        "path":"/api/alert/v1/alerts",
                        "methods": ["get"]
                    },
                    {
                        "path":"/api/alert/v1/alerts",
                        "methods": ["post"]
                    },
                    {
                        "path":"/api/alert/v1/alerts/{alert_id}",
                        "methods": ["get"]
                    },
                    {
                        "path":"/api/alert/v1/alerts/webhook",
                        "methods": ["post"]
                    },
                    {
                        "path":"/api/alert/v1/alerts/{alert_id}/{action}",
                        "methods": ["patch"]
                    },
                    {
                        "path":"/api/alert/v1/alerts/bulk/{action}",
                        "methods": [
                            {
                                "method": "patch",
                                "description": "Bulk action on alerts"
                            }
                        ]
                    }
                ]
            }
        },
        {
            "server_name": "zcp-mcm-backend",
            "endpoint": "https://api.ags.cloudzcp.net",
            "base_path": "/api/mcm/resource/v1beta1",
            "tls_verify": false,
            "timeout": 10,
            "spec_file_path": "runner/openapi/zcp/zcp_mcm_backend_openapi_spec.json",
            "auth_config": {
                "type": "ApiKey",
                "api_key_name": "X-Access-Key",
                "api_key_value": "zmp-09bae73d-9f59-491a-ae06-7747e8f79883"
            },
            "tool_config": {
                "api_maps": [
                    {
                        "path":"/api/mcm/resource/v1beta1/accesscontrol/clusterrolebindings",
                        "methods": ["get"]
                    }
                ],
                "route_maps": [
                    {
                        "pattern": "^.*/pods/.*",
                        "tags": ["pods"],
                        "methods": ["get"]
                    }
                ]
            }
        }
    ]
}
