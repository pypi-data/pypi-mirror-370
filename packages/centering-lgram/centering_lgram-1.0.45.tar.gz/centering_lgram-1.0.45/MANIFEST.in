# Gereksiz ve büyük dosya/dizinleri hariç tut
exclude logs/*
exclude models/logs/*
exclude lgram/models/logs/*
exclude centering_lgram.egg-info/*
exclude .pytest_cache/*
exclude .qodo/*
exclude .vscode/*
exclude dist/*
recursive-exclude */__pycache__/*
# Include important files in the distribution
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include all Python files
recursive-include lgram *.py

# Include model and data files
recursive-include lgram/models *.py
recursive-include lgram/models/logs *
recursive-include ngrams *
recursive-include logs *.txt

# Exclude unnecessary files
exclude *.pyc
exclude .DS_Store
exclude .gitignore
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include tests if present
recursive-include tests *.py

# Include examples if present
recursive-include examples *.py *.txt *.md
