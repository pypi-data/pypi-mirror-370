{
  "name": "default.dark",
  "base": "default.light",
  "friendly_name": "Default Dark",

  "color_palette": {
    "default_bg": [20, 20, 20, 255],
    "default_fg": [255, 255, 255, 245]
  },

  "styles": {
    "SkWindow": {
      "rest":{
        "bg": {"color_palette": "default_bg"}
      }
    },

    "SkFrame": {
      "rest": {
        "radius": 0,
        "bg": "transparent",
        "bd": "transparent",
        "width": 0
      }
    },

    "SkCard": {
      "rest": {
        "radius": 8,
        "bg": [25, 25, 25, 245],
        "bd": [35, 35, 35, 245],
        "bd_shadow": [0, 3, 2, 2, [200, 200, 200, 20]],
        "width": 2
      }
    },

    "SkBadge": {
      "rest": {
        "radius": 99,
        "bg": [5, 105, 200, 255],
        "fg": [255, 255, 255, 235],
        "bd": "transparent",
        "width": 0
      }
    },

    "SkButton": {
      "rest": {
        "radius": 5,
        "bg": [40, 40, 40, 255],
        "bg_shader": {
          "linear_gradient": {
            "start_anchor": "n",
            "end_anchor": "s",
            "colors": [
              [35, 35, 35, 255],
              [50, 50, 50, 255]
            ]
          }
        },
        "fg": {"color_palette": "default_fg"},
        "bd": [50, 50, 50, 255],
        "bd_shadow": [0, 3, 1, 1, [255, 255, 255, 50]],
        "width": 2
      },
      "hover": {
        "bg": [50, 50, 50, 255],
        "bg_shader": {
          "linear_gradient": {
            "start_anchor": "n",
            "end_anchor": "s",
            "colors": [
              [35, 35, 35, 255],
              [50, 50, 50, 255]
            ]
          }
        },
        "fg": {"color_palette": "default_fg"},
        "bd": [60, 60, 60, 255],
        "bd_shadow": [0, 0, 5, 5, [80, 160, 255, 255]],
        "width": 2
      },
      "pressed": {
        "bg": [60, 60, 60, 255],
        "bg_shader": {
          "linear_gradient": {
            "start_anchor": "n",
            "end_anchor": "s",
            "colors": [
              [55, 55, 55, 255],
              [35, 35, 35, 255]
            ]
          }
        },
        "fg": {"color_palette": "default_fg"},
        "bd": [55, 55, 55, 255],
        "bd_shadow": [0, 0, 3, 3, [40, 130, 255, 255]],
        "width": 2
      },
      "focus": {
        "bg": [40, 40, 40, 255],
        "fg": {"color_palette": "default_fg"},
        "bd": [40, 130, 255, 255],
        "width": 3
      }
    },

    "SkText": {
      "rest": {
        "fg": [255, 255, 255, 245]
      }
    },

    "SkEntry": {
      "rest": {
        "radius": 8,
        "bg": [30, 30, 30, 245],
        "fg": {"color_palette": "default_fg"},
        "bd": [50, 50, 50, 255],
        "width": 2,
        "placeholder": [255, 255, 255, 165]
      },
      "hover": {
        "bg": [0, 0, 0, 30],
        "fg": {"color_palette": "default_fg"},
        "bd": [25, 125, 225, 235],
        "width": 2,
        "placeholder": [255, 255, 255, 165]
      },
      "focus": {
        "bg": [0, 0, 0, 15],
        "fg": {"color_palette": "default_fg"},
        "bd": [25, 125, 225, 235],
        "width": 3,
        "placeholder": [0, 0, 0, 0]
      }
    }
  }
}