# MSA Reasoning Engine Environment Configuration Template
# Copy this to .env and fill in your actual values

# ==============================================
# Daytona Sandbox Configuration
# ==============================================
DAYTONA_API_KEY=your_daytona_api_key_here
DAYTONA_API_URL=https://app.daytona.io/api

# ==============================================
# Azure OpenAI Configuration (Required)
# ==============================================
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# ==============================================
# Application Settings
# ==============================================
DEBUG=false
DEVELOPMENT=false
LOG_LEVEL=INFO

# ==============================================
# MSA Engine Configuration
# ==============================================
# Maximum number of reasoning steps allowed per session
MAX_REASONING_STEPS=10

# Number of MCMC samples for probabilistic inference
PROBABILISTIC_SAMPLES=1000

# Uncertainty threshold for model confidence assessment (0.0 - 1.0)
UNCERTAINTY_THRESHOLD=0.8

# ==============================================
# Performance and Resource Settings
# ==============================================
# Timeout settings (in seconds)
REASONING_TIMEOUT=300
KNOWLEDGE_EXTRACTION_TIMEOUT=120
PROBABILISTIC_SYNTHESIS_TIMEOUT=180

# ==============================================
# Security Settings
# ==============================================
# Set to production values in deployment
ENVIRONMENT=development
ALLOWED_ORIGINS="*"
DEVELOPMENT=true
LOG_LEVEL=INFO

# ==============================================
# Optional: Additional AI Service Keys
# ==============================================
# Uncomment and fill if you plan to use additional AI services
# ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_AI_API_KEY=your_google_ai_key_here
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GOOGLE_AI_GEMINI_MODEL_ID=gemini-2.0-flash-exp
# HUGGINGFACE_API_KEY=your_hf_key_here

# ==============================================
# Database Configuration
# ==============================================
# Redis Configuration (if using Redis)
REDIS_URL=redis://username:password@host:port
REDIS_ENDPOINT=your-redis-endpoint.com
REDIS_USERNAME=your_username
REDIS_PASSWORD=your_secure_password
REDIS_PORT=6379

# ==============================================
# Monitoring and Logging (Optional)
# ==============================================
# Uncomment if you plan to add external monitoring
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_key_here

# ==============================================
# Model Configuration Overrides
# ==============================================
# Override default model settings if needed
