{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(uv run pytest tests/ --co -q)",
      "Bash(uv sync --extra test)",
      "Bash(uv:*)",
      "Bash(claude:*)",
      "Bash(cat:*)",
      "Bash(pre-commit run:*)",
      "Bash(gh run list:*)",
      "Bash(gh auth:*)",
      "Bash(gh run view:*)",
      "Bash(gh:*)",
      "Bash(gh api:*)",
      "Bash(gh workflow run:*)",
      "Bash(gh run watch:*)",
      "WebSearch",
      "Bash(git tag:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "time",
    "git",
    "github",
    "serena",
    "sequential-thinking",
    "context7",
    "magic",
    "playwright",
    "filesystem",
    "fetch",
    "searxng",
    "memgraph",
    "crawl4ai",
    "docker"
  ]
}
