<odoo>
    <record model="ir.ui.view" id="endpoint_mixin_form_view">
        <field name="model">endpoint.mixin</field>
        <field name="priority" eval="99" />
        <field name="inherit_id" ref="endpoint_cache.endpoint_mixin_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cache_policy']" position="after">
                <field name="cache_preheat" />
                <field name="cache_preheat_ts" />
            </xpath>
            <xpath expr="//button[@name='action_preheat_cache']" position="replace">
                <button
                    class="oe_inline"
                    name="action_preheat_cache_async"
                    string="Force cache pre-heat (async)"
                    help="A job will be created to pre-heat the cache. You can check the status of the job in the Jobs menu."
                    type="object"
                    colspan="2"
                />
            </xpath>
        </field>
    </record>
</odoo>
