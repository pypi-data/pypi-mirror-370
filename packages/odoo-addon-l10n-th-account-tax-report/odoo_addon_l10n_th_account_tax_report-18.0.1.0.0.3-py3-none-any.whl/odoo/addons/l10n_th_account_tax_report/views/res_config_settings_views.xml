<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.thai.account</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="l10n_th_account_tax.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='l10n_th_account_settings']" position="inside">
                <setting
                    id="manage_format_tax_report_setting"
                    string="Tax Report Format"
                    help="Default format tax report applied to standard or revenue department."
                >
                    <div class="content-group">
                        <div class="row mt16">
                            <label
                                string="Tax Report"
                                for="tax_report_format"
                                class="col-lg-4 o_light_label"
                            />
                            <field name="tax_report_format" />
                        </div>
                        <div class="row">
                            <label
                                string="WHT Text File"
                                for="wht_report_format"
                                class="col-lg-4 o_light_label"
                            />
                            <field name="wht_report_format" />
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
