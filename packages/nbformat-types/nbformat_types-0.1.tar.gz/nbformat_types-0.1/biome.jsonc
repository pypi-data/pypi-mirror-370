{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"formatter": { "useEditorconfig": true },
	"overrides": [
		{
			"includes": ["./.vscode/*.json", "**/*.jsonc", "**/asv.conf.json"],
			"json": {
				"formatter": {
					"trailingCommas": "all",
				},
				"parser": {
					"allowComments": true,
					"allowTrailingCommas": true,
				},
			},
		},
	],
}
