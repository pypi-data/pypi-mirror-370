<odoo>
    <record id="account_payment_lot_form" model="ir.ui.view">
        <field name="model">account.payment.lot</field>
        <field
            name="inherit_id"
            ref="account_payment_sepa_base.account_payment_lot_form"
        />
        <field name="arch" type="xml">
            <field name="local_instrument" position="after">
                <field name="sequence_type" invisible="not mandate_required" />
            </field>
        </field>
    </record>

    <record id="account_payment_lot_list" model="ir.ui.view">
        <field name="model">account.payment.lot</field>
        <field
            name="inherit_id"
            ref="account_payment_sepa_base.account_payment_lot_list"
        />
        <field name="arch" type="xml">
            <field name="local_instrument" position="after">
                <field
                    name="sequence_type"
                    optional="show"
                    widget="badge"
                    decoration-danger="sequence_type == 'FNAL'"
                    decoration-warning="sequence_type == 'OOFF'"
                    decoration-info="sequence_type == 'RCUR'"
                />
            </field>
            <field name="local_instrument" position="attributes">
                <attribute
                    name="decoration-success"
                >local_instrument == 'CORE'</attribute>
                <attribute
                    name="decoration-warning"
                >local_instrument == 'B2B'</attribute>
            </field>
        </field>
    </record>
</odoo>
