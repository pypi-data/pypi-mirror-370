# MAOS Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=50
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_TIMEOUT=10

# ============================================
# AGENT CONFIGURATION
# ============================================
MAX_AGENTS=20
DEFAULT_AGENT_TIMEOUT=300
AGENT_HEALTH_CHECK_INTERVAL=10
AGENT_AUTO_RESTART=true
AGENT_MAX_RETRIES=3
AGENT_SPAWN_TIMEOUT=30
AGENT_CLEANUP_INTERVAL=60

# ============================================
# TASK CONFIGURATION
# ============================================
DEFAULT_TASK_STRATEGY=adaptive
TASK_QUEUE_SIZE=1000
TASK_PRIORITY_LEVELS=5
TASK_MAX_DEPENDENCIES=50
TASK_TIMEOUT_MINUTES=60

# ============================================
# CHECKPOINT CONFIGURATION
# ============================================
CHECKPOINT_INTERVAL_SECONDS=30
CHECKPOINT_RETENTION_DAYS=7
CHECKPOINT_COMPRESSION=true
CHECKPOINT_STORAGE=s3
S3_BUCKET_NAME=maos-checkpoints
S3_REGION=us-east-1
LOCAL_CHECKPOINT_DIR=/tmp/maos/checkpoints

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-this-to-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

API_KEY_SECRET=change-this-to-random-api-secret
API_KEY_PREFIX=maos_
API_KEY_LENGTH=32

ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=change-this-to-random-encryption-key

# ============================================
# MONITORING & METRICS
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_PATH=/health

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/maos/maos.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# ============================================
# CLAUDE CODE INTEGRATION
# ============================================
CLAUDE_API_ENDPOINT=https://api.anthropic.com
CLAUDE_API_VERSION=2024-01-01
CLAUDE_MAX_RETRIES=3
CLAUDE_TIMEOUT=120
CLAUDE_RATE_LIMIT_PER_MINUTE=60

# ============================================
# PERFORMANCE TUNING
# ============================================
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=1024

MESSAGE_BUS_BUFFER_SIZE=10000
MESSAGE_BUS_MAX_SUBSCRIBERS=100
MESSAGE_BUS_DELIVERY_TIMEOUT=30

PARALLEL_EXECUTION_THRESHOLD=3
BATCH_PROCESSING_SIZE=50
WORKER_POOL_SIZE=10

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost/maos
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# ============================================
# NOTIFICATION CONFIGURATION (Optional)
# ============================================
ENABLE_NOTIFICATIONS=false
NOTIFICATION_CHANNELS=email,slack

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@maos.dev

# Slack
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#maos-alerts

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
DEBUG=false
TESTING=false
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=/tmp/maos/profiling

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
ENVIRONMENT=development  # development, staging, production
SERVICE_NAME=maos
SERVICE_VERSION=1.0.0
DEPLOYMENT_ID=
CLUSTER_NAME=
REGION=us-east-1

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_CONSENSUS=true
ENABLE_AUTO_SCALING=true
ENABLE_CHECKPOINT_RECOVERY=true
ENABLE_DISTRIBUTED_TRACING=false
ENABLE_AUDIT_LOGGING=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
RATE_LIMIT_BURST_SIZE=20

# ============================================
# ADVANCED SETTINGS
# ============================================
ENABLE_MEMORY_PROFILING=false
MEMORY_LIMIT_MB=4096
CPU_LIMIT_CORES=4

GARBAGE_COLLECTION_INTERVAL=300
GARBAGE_COLLECTION_THRESHOLD=0.8

EVENT_LOOP_POLICY=asyncio
WORKER_CLASS=sync
WORKER_CONNECTIONS=1000

# ============================================
# INTEGRATION SETTINGS
# ============================================
GITHUB_TOKEN=
GITLAB_TOKEN=
JIRA_API_TOKEN=
CONFLUENCE_API_TOKEN=

WEBHOOK_ENDPOINT=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=10

# ============================================
# EXPERIMENTAL FEATURES
# ============================================
ENABLE_NEURAL_OPTIMIZATION=false
ENABLE_QUANTUM_CONSENSUS=false
ENABLE_SWARM_INTELLIGENCE=false
ENABLE_ADAPTIVE_TOPOLOGY=false