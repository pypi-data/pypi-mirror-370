{
  "checkpoint": {
    "intervalSeconds": 30,
    "maxCheckpoints": 10,
    "compressionLevel": 6,
    "encryptionEnabled": true,
    "storage": {
      "primary": "local",
      "s3": {
        "bucket": "maos-checkpoints",
        "region": "us-west-2",
        "prefix": "checkpoints/v1"
      },
      "local": {
        "path": "./data/checkpoints",
        "maxSizeBytes": 10737418240
      },
      "cacheSize": 100,
      "cacheTtl": 3600
    },
    "performance": {
      "maxSaveTimeMs": 5000,
      "maxRecoveryTimeMs": 60000,
      "compressionTarget": 10,
      "batchSize": 5
    }
  },
  "logging": {
    "level": "info",
    "structured": true,
    "retention": {
      "days": 7
    }
  },
  "monitoring": {
    "enabled": true,
    "metricsRetentionHours": 168,
    "alerting": {
      "enabled": true,
      "thresholds": {
        "saveTimeMs": 5000,
        "recoveryTimeMs": 60000,
        "errorRate": 0.05,
        "storageUsagePercent": 90
      }
    }
  },
  "api": {
    "enabled": true,
    "port": 3001,
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    },
    "authentication": {
      "enabled": false,
      "type": "bearer"
    }
  }
}
