#pragma once

#cmakedefine MAiNGO_VERSION "@MAiNGO_VERSION@"


namespace maingo {


/**
* @brief Function returning the current version number
*
* @return Returns a string of the version number as vX.X.X[.X]
*/
inline std::string
get_version()
{
    std::string version = std::string("v") + std::string(MAiNGO_VERSION);

    // Make sure we always have the same length by padding with spaces:
    for (size_t i=version.length(); i<8; ++i) {
        version += " ";
    }

    return version;
}


}    // end namespace maingo