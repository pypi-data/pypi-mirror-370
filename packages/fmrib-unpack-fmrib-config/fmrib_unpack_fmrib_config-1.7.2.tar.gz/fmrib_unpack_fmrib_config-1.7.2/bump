#!/usr/bin/env bash

if [ "$#" -ne 1 ]; then
  echo "Usage: bump <newversion>"
fi

rootdir=$(cd $(dirname $0) && pwd)

newver="$1"
oldver=$(grep -e "version \+= " ${rootdir}/pyproject.toml)
oldver=$(echo -n "${oldver}" | tr -s " " | cut -d " " -f 3 | tr -d "'" | tr -d '"')

sed -i "s/${oldver}/${newver}/g" ${rootdir}/pyproject.toml
sed -i "s/${oldver}/${newver}/g" ${rootdir}/funpack/configs/fmrib.cfg
