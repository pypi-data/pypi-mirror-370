            }
        },
        {
            "command": "hco ls",
            "http": "get"
        },
        {
            "command": "hco key {p}",
            "http": "post",
            "permissions": {
                "roles": ["user"]
            }
        },
        {
            "command": "hco key rm {p}",
            "http": "post",
            "permissions": {
                "roles": ["user"]
            }
        },
        {
            "command": "hco key rotate {p}",
            "http": "post",
            "permissions": {
                "roles": ["user"]
            }
        },
