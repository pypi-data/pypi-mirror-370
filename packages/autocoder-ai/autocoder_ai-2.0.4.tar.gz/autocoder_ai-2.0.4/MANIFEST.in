# Include documentation
include README.md
include LICENSE
include PUBLISHING.md
include CHANGELOG.md

# Include configuration files
include requirements.txt
include requirements-dev.txt
include pyproject.toml
include setup.cfg

# Include all YAML configuration files
recursive-include agents *.yaml *.yml
recursive-include config *.yaml *.yml
recursive-include workflow *.yaml *.yml

# Include web interface static files and templates
recursive-include web_interface/templates *.html
recursive-include web_interface/static *.css *.js *.png *.jpg *.svg *.ico
recursive-include web_interface/static/css *
recursive-include web_interface/static/js *
recursive-include web_interface/static/images *

# Include test data (optional, exclude if you don't want tests in distribution)
recursive-include tests *.py *.yaml *.json
prune tests/__pycache__

# Include prompt templates
recursive-include agents/prompts *.txt *.md

# Include example configurations
recursive-include examples *.yaml *.py *.md

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.swp
global-exclude .DS_Store
global-exclude __pycache__
prune .git
prune .github
prune docs/_build
prune dist
prune build
exclude .gitignore
exclude .dockerignore
exclude Dockerfile
exclude docker-compose.yml
