<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form_inherit">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_create_sale_order']" position="inside">
                <setting
                    id="fsm_notification_user_id"
                    string="User who will recive notifications from fsm pos orders"
                >
                    <field name="fsm_notification_user_id" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
