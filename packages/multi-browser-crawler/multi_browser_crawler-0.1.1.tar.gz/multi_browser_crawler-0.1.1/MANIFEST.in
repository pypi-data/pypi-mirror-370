# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Include package data
recursive-include multi_browser_crawler *.py
include multi_browser_crawler/py.typed
recursive-include multi_browser_crawler/config *.json
recursive-include multi_browser_crawler/utils *.js
recursive-include multi_browser_crawler/js *.js
recursive-include multi_browser_crawler/data *.txt

# Include tests
recursive-include tests *.py

# Include examples
recursive-include examples *.py
recursive-include examples *.md

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude .coverage
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
