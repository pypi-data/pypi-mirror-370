{
  "mcpServers": {
    "TypeScript工具服务": {
      "command": "python",
      "args": [
        "-m",
        "mcp_ts.server"
      ],
      "description": "提供验证码生成和TypeScript代码工具的服务",
      "metadata": {
        "version": "0.1.2",
        "author": "MCP Developer",
        "homepage": "https://github.com/mcp-project/verification-code-generator",
        "license": "MIT"
      },
      "tools": [
        {
          "name": "generate_numeric_verification_code",
          "description": "生成一个数字验证码。如果未指定位数，默认生成6位数字验证码。",
          "parameters": {
            "digits": {
              "type": "integer",
              "description": "验证码位数",
              "default": 6
            }
          },
          "returns": {
            "type": "string",
            "description": "生成的数字验证码"
          }
        },
        {
          "name": "generate_alphabetic_verification_code",
          "description": "生成一个纯字母验证码（包含大小写）。如果未指定长度，默认生成6位字母验证码。",
          "parameters": {
            "length": {
              "type": "integer",
              "description": "验证码长度",
              "default": 6
            }
          },
          "returns": {
            "type": "string",
            "description": "生成的字母验证码"
          }
        },
        {
          "name": "generate_mixed_verification_code",
          "description": "生成一个字母和数字混合的验证码。如果未指定长度，默认生成6位混合验证码。",
          "parameters": {
            "length": {
              "type": "integer",
              "description": "验证码长度",
              "default": 6
            }
          },
          "returns": {
            "type": "string",
            "description": "生成的混合验证码"
          }
        },
        {
          "name": "format_typescript_code",
          "description": "格式化TypeScript代码（简单实现）",
          "parameters": {
            "code": {
              "type": "string",
              "description": "需要格式化的TypeScript代码"
            }
          },
          "returns": {
            "type": "string",
            "description": "格式化后的代码"
          }
        }
      ],
      "resources": [
        {
          "name": "ts-template",
          "description": "获取TypeScript模板代码",
          "uriTemplate": "ts-template://{template_name}",
          "parameters": {
            "template_name": {
              "type": "string",
              "description": "模板名称，可选值：class, interface, react-component, next-page"
            }
          },
          "returns": {
            "type": "string",
            "description": "模板代码"
          }
        }
      ],
      "installation": {
        "pip": "pip install verification-code-generator",
        "requirements": ["Python 3.8+"]
      }
    }
  }
}
