<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="wishlist_page_hide_price"
        inherit_id="website_sale_wishlist.product_wishlist"
    >
        <xpath
            expr="//td[span[@t-field='website.prevent_zero_price_sale_text']]"
            position="attributes"
        >
            <attribute name="t-if">
                combination_info['prevent_zero_price_sale'] and website.website_show_price and not wish.product_id.website_hide_price
            </attribute>
        </xpath>
        <xpath expr="//td[hasclass('o_wish_price')]" position="attributes">
            <attribute name="t-if">
                website.website_show_price and not wish.product_id.website_hide_price
            </attribute>
        </xpath>
        <xpath expr="//td[hasclass('td-wish-btn')]" position="attributes">
            <attribute name="t-if">
                website.website_show_price and not wish.product_id.website_hide_price
            </attribute>
        </xpath>
        <xpath expr="//td[hasclass('text-start')]" position="attributes">
            <attribute name="t-att-colspan">
                1 if website.website_show_price and not wish.product_id.website_hide_price else 3
            </attribute>
        </xpath>
    </template>
</odoo>
