recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude ios_bridge_cli/electron_app/node_modules *
recursive-exclude ios_bridge_cli/electron_app/dist *
prune build
prune dist
prune *.egg-info