{
  "name": "event_alert",
  "description": "Aesthetic Instagram post template with centered CTA, extended background, and subtle gradients",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "fill_color": "#0055fe"
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": { "x": 0, "y": 0 },
      "font_size": 50,
      "max_width": 1080,
      "color": "#ffffff",
      "font_path": "Outfit-Regular",
      "alignment": "center"
    },
    {
      "type": "cta_button_group",
      "position": { "x": 0, "y": 100 },
      "spacing": 20,
      "max_width": 1080,
      "line_height": 1.5,
      "align": "center",
      "items": [
        {
          "type": "cta_button",
          "text": "${event_type}",
          "auto_width": true,
          "bg_color": "#91b6ff",
          "text_color": "#ffffff",
          "font_size": 30,
          "font_path": "Montserrat-Medium",
          "corner_radius": 30,
          "padding": 60
        },
        {
          "type": "cta_button",
          "text": "${event_date}",
          "auto_width": true,
          "bg_color": "#ffffff",
          "text_color": "#0055fe",
          "font_size": 30,
          "font_path": "Montserrat-Medium",
          "corner_radius": 30,
          "padding": 60
        },
        {
          "type": "cta_button",
          "text": "${event_time}",
          "auto_width": true,
          "bg_color": "#ffffff",
          "text_color": "#0055fe",
          "font_size": 30,
          "font_path": "Montserrat-Medium",
          "corner_radius": 30,
          "padding": 60
        }
      ]
    },

    {
      "type": "text",
      "text": "${event_highlight}",
      "position": { "x": 150, "y": 250 },
      "font_size": 50,
      "max_width": 780,
      "alignment": "center",
      "color": "#ffffff",
      "font_path": "Poppins-Regular"
    },
    {
      "type": "text",
      "text": "${register_details}",
      "position": { "x": 30, "y": 1040 },
      "font_size": 24,
      "alignment": "left",
      "color": "#ffffff",
      "font_path": "Poppins-Light"
    },
    {
      "type": "image",
      "position": { "x": 150, "y": 490 },
      "size": { "width": 780, "height": 500 },
      "image_url": "${product_image}"
    }
  ]
}
