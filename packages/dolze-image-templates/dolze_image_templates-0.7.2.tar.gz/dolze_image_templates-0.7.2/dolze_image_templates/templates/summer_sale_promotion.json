{
  "name": "summer_sale_promotion",
  "description": "Modern summer sale promotion with bold typography and clean layout",
  "size": { "width": 1080, "height": 810 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "tint": {
        "type": "linear",
        "center": [0.5, 0.5],
        "colors": [
          [1, 1, 1, 1],
          [1, 1, 1, 0.9],
          [1, 1, 1, 0.8],
          [1, 1, 1, 0.8],
          [1, 1, 1, 0.4],
          [1, 1, 1, 0.2],
          [1, 1, 1, 0.0]
        ],
        "opacity": 0.9
      },
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 810 }
    },

    {
      "type": "cta_button",
      "text": "${brand_name}",
      "position": { "x": 81, "y": 24 },
      "size": { "width": 378, "height": 54 },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 30,
      "font_path": "Outfit-Bold",
      "corner_radius": 27
    },
    {
      "type": "text",
      "text": "${sale_heading}",
      "position": { "x": 81, "y": 132 },
      "font_size": 92,
      "color": [255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 486,
      "line_height": 1.1,
      "letter_spacing": -0.81
    },
    {
      "type": "text",
      "text": "${sale_description}",
      "position": { "x": 81, "y": 350 },
      "font_size": 27,
      "color": [255, 255, 255, 1],
      "font_path": "Poppins-Medium",
      "alignment": "left",
      "max_width": 432,
      "line_height": 1.8,
      "letter_spacing": 0.76
    },
    {
      "type": "text",
      "text": "${discount_text}",
      "position": { "x": 81, "y": 588 },
      "font_size": 54,
      "color": [255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 270,
      "line_height": 1.2,
      "letter_spacing": -0.54
    },
    {
      "type": "cta_button",
      "text": "${contact_number}",
      "position": { "x": 81, "y": 751 },
      "size": { "width": 378, "height": 54 },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 30,
      "font_path": "Outfit-Bold",
      "corner_radius": 27
    }
  ]
}
