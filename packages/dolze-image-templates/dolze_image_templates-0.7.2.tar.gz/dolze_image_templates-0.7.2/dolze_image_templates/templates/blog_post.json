{
  "name": "blog_post",
  "description": "Aesthetic Instagram post template with centered CTA, extended background, and subtle gradients",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#FEE9E1", "#F5C7D0"],
        "direction": 45
      },
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": { "x": 142, "y": 356 },
      "size": { "width": 2276, "height": 2088 },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#FFFFFF", "#F8F8F8"],
        "direction": 90
      },
      "outline_color": null,
      "border_radius": 95
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 142, "y": 356 },
      "size": { "width": 2276, "height": 1138 },
      "border_width": 0,
      "border_radius": 95
    },
    {
      "type": "text",
      "text": "${title}",
      "position": { "x": 237, "y": 1614 },
      "font_size": 114,
      "color": [40, 40, 40, 1],
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "max_width": 2086,
      "line_height": 1.3
    },
    {
      "type": "text",
      "text": "by ${author} â€¢ ${read_time} min",
      "position": { "x": 237, "y": 1948 },
      "font_size": 76,
      "color": [100, 100, 100, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 2086
    },
    {
      "type": "cta_button",
      "text": "Read now",
      "position": { "x": 237, "y": 2184 },
      "size": { "width": 616, "height": 190 },
      "font_size": 81,
      "color": [255, 255, 255, 1],
      "font_path": "Outfit-Medium",
      "alignment": "center",
      "max_width": 616,
      "line_height": 1.5,
      "corner_radius": 25
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 142, "y": 142 },
      "size": { "width": 190, "height": 190 },
      "circle_crop": true,
      "border_width": 10,
      "border_color": "#FFFFFF"
    },
    {
      "type": "rectangle",
      "position": { "x": 237, "y": 1542 },
      "size": { "width": 190, "height": 9 },
      "fill_color": [255, 100, 100, 1],
      "border_radius": 5
    }
  ]
}
