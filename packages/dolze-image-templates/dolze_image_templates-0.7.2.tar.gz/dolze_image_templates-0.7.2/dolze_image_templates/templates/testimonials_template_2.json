{
  "name": "testimonials_template_2",
  "description": "Elegant testimonial card with gradient background and star rating",
  "size": { "width": 2048, "height": 2048 },
  "use_base_image": true,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2048, "height": 2048 },
      "fill_color": [224, 231, 255, 1],
      "border_radius": 0
    },
    {
      "type": "rectangle",
      "position": { "x": 150, "y": 150 },
      "size": { "width": 1748, "height": 1748 },
      "fill_color": [255, 255, 255, 1],
      "border_radius": 50
    },
    {
      "type": "image",
      "image_url": "${user_avatar}",
      "position": { "x": 874, "y": 200 },
      "size": { "width": 300, "height": 300 },
      "circle_crop": true
    },
    {
      "type": "text",
      "position": { "x": 250, "y": 550 },
      "text": "‚ùù",
      "font_path": "Outfit-Regular",
      "font_size": 200,
      "color": [209, 213, 219, 1],
      "align": "left"
    },
    {
      "type": "text",
      "position": { "x": 350, "y": 650 },
      "text": "${testimonial_text}",
      "font_path": "Outfit-Regular",
      "font_size": 80,
      "color": [31, 41, 55, 1],
      "max_width": 1400,
      "line_spacing": 1.5,
      "align": "center"
    },
    {
      "type": "image",
      "image_url": "https://cdn-icons-png.flaticon.com/512/1828/1828884.png",
      "position": { "x": 774, "y": 1200 },
      "size": { "width": 80, "height": 80 }
    },
    {
      "type": "image",
      "image_url": "https://cdn-icons-png.flaticon.com/512/1828/1828884.png",
      "position": { "x": 874, "y": 1200 },
      "size": { "width": 80, "height": 80 }
    },
    {
      "type": "image",
      "image_url": "https://cdn-icons-png.flaticon.com/512/1828/1828884.png",
      "position": { "x": 974, "y": 1200 },
      "size": { "width": 80, "height": 80 }
    },
    {
      "type": "image",
      "image_url": "https://cdn-icons-png.flaticon.com/512/1828/1828884.png",
      "position": { "x": 1074, "y": 1200 },
      "size": { "width": 80, "height": 80 }
    },
    {
      "type": "image",
      "image_url": "https://cdn-icons-png.flaticon.com/512/1828/1828884.png",
      "position": { "x": 1174, "y": 1200 },
      "size": { "width": 80, "height": 80 }
    },
    {
      "type": "text",
      "position": { "x": 350, "y": 1400 },
      "text": "${user_name}",
      "font_path": "Outfit-Regular",
      "font_size": 70,
      "color": [31, 41, 55, 1],
      "align": "center"
    },
    {
      "type": "text",
      "position": { "x": 350, "y": 1500 },
      "text": "${user_title}",
      "font_path": "Outfit-Regular",
      "font_size": 50,
      "color": [107, 114, 128, 1],
      "align": "center"
    },
    {
      "type": "text",
      "position": { "x": 350, "y": 1600 },
      "text": "${website_url}",
      "font_path": "Outfit-Regular",
      "font_size": 50,
      "color": [107, 114, 128, 1],
      "align": "center"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 1650, "y": 1650 },
      "size": { "width": 150, "height": 150 },
      "opacity": 0.7,
      "circle_crop": true
    }
  ]
}
