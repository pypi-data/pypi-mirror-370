{
  "name": "product_service_minimal",
  "description": "Clean Q&A template with centered profile picture and question/answer layout",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/5f638426-d112-46b6-a5b0-405763aeb943.png",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 70, "y": 1000 },
      "font_size": 30,
      "color": "#b0571c",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 2500
    },
    {
      "type": "text",
      "text": "${text}",
      "position": { "x": 70, "y": 400 },
      "font_size": 40,
      "color": "#b0571c",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 470
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 550, "y": 0 },
      "size": { "width": 1100, "height": 1100 },
      "font_size": 240,
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 2500
    }
  ]
}
