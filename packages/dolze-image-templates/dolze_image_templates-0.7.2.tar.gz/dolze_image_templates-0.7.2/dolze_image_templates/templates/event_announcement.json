{
  "name": "event_announcement",
  "description": "Event announcement template",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${event_image}",
      "position": { "x": -200, "y": -160 },
      "size": { "width": 1080, "height": 1080 },
      "aspect_ratio": "contain",
      "circle_crop": true
    },
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templates/base7535769c-2602-4635-8366-2b6c1f0ff2dc.png",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${event_name}",
      "position": { "x": 400, "y": 750 },
      "font_size": 80,
      "color": [255, 255, 255, 1.0],
      "font_path": "CormorantGaramond-Bold",
      "alignment": "center",
      "max_width": 240,
      "line_spacing": 1.1
    },
    {
      "type": "text",
      "text": "${event_description}",
      "position": { "x": 450, "y": 990 },
      "font_size": 33,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-SemiBold",
      "alignment": "left",
      "max_width": 680
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": { "x": 500, "y": 15 },
      "font_size": 40,
      "color": [255, 255, 255, 1.0],
      "font_path": "Raleway-Bold",
      "alignment": "right",
      "max_width": 550,
      "line_spacing": 1.1
    }
  ]
}
