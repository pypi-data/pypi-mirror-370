{
  "name": "brand_info_2",
  "description": "Enhanced product advertisement template for the products",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/mbcEtwwJKCf7jn4GnfzFm1thlhC3/6829afe6925fb5ef8c087942/business_assets/YellowandBlackIllustrationWebsiteDesignSocialMediaGraphic.png",
      "tint_color": "#121212",
      "tint_opacity": 0.15,
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },
    {
      "type": "text",
      "text": "${service_hook}",
      "position": { "x": 150, "y": 150 },
      "font_size": 50,
      "color": "#111112",
      "font_path": "Montserrat-Thin",
      "max_width": 780,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${service_name}",
      "position": { "x": 300, "y": 230 },
      "font_size": 80,
      "font_path": "Montserrat-ExtraBold",
      "color": "#ffb300",
      "max_width": 480,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${content}",
      "position": { "x": 100, "y": 350 },
      "font_size": 25,
      "font_path": "Montserrat-Thin",
      "color": "#121212",
      "max_width": 880,
      "alignment": "center"
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 100, "y": 500 },
      "size": { "width": 880, "height": 500 },
      "border_radius": 20
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 100, "y": 1030 },
      "font_size": 20,
      "font_path": "Montserrat-Light",
      "color": "#111222",
      "max_width": 290,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${contact_number}",
      "position": { "x": 390, "y": 1030 },
      "font_size": 20,
      "font_path": "Montserrat-Light",
      "color": "#111222",
      "max_width": 290,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${contact_email}",
      "position": { "x": 680, "y": 1030 },
      "font_size": 20,
      "font_path": "Montserrat-Light",
      "color": "#111222",
      "max_width": 290,
      "alignment": "center"
    }
  ]
}
