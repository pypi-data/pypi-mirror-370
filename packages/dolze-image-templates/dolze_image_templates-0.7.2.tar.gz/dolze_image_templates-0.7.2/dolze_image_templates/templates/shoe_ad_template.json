{
    "name": "shoe_ad_template",
    "description": "Minimal poster with white background, large headline text, shoe image with red lace forming an awareness ribbon, and event info.",
    "size": {
      "width": 1024,
      "height": 1536
    },
    "use_base_image": false,
    "components": [
      {
        "type": "rectangle",
        "position": { "x": 0, "y": 0 },
        "size": { "width": 1024, "height": 1536 },
        "gradient": {
        "type": "linear",
        "colors": ["#FBFBFB", "#DEDEDE"],
        "direction": 90
      }
      },
      {
        "type": "text",
        "text": "${headline_text}",
        "position": { "x": 80, "y": 100 },
        "font_size": 100,
        "font_path": "Poppins-Black",
        "color": "#000000",
        "alignment": "center",
        "max_width": 864,
        "line_height": 1.2
      },
      {
        "type": "text",
        "text": "${subtext}",
        "position": { "x": 80, "y": 370 },
        "font_size": 36,
        "font_path": "Poppins-Regular",
        "color": "#000000",
        "alignment": "center",
        "max_width": 864,
        "line_height": 1.4
      },
      {
        "type": "text",
        "text": "${footer_text}",
        "position": { "x": 80, "y": 500 },
        "font_size": 40,
        "font_path": "Poppins-Bold",
        "color": "#000000",
        "alignment": "center",
        "max_width":864
      },
      {
        "type": "image",
        "image_url": "${shoe_image_url}",
        "position": { "x": 0, "y": 575 },
        "size": { "width": 1024, "height": 1024 },
        "image_fit": "contain"
      }
    ]
  }
  