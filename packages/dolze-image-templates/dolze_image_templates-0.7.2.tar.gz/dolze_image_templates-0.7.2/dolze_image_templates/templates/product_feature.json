{
  "name": "product_feature",
  "size": { "width": 1080, "height": 1080 },
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/mbcEtwwJKCf7jn4GnfzFm1thlhC3/6829afe6925fb5ef8c087942/business_assets/BeigeGreenMinimalProductFeatureInstagramPost.png",
