{
  "name": "blog_post_2",
  "description": "Modern and elegant blog post template with enhanced visual hierarchy and aesthetics",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": [255, 255, 255, 1],
      "outline_color": [229, 231, 235, 1],
      "border_radius": 40
    },
    {
      "type": "rectangle",
      "position": { "x": 256, "y": 300 },
      "size": { "width": 2048, "height": 1216 },
      "fill_color": [243, 244, 246, 1],
      "outline_color": [229, 231, 235, 1],
      "border_radius": 24
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 256, "y": 300 },
      "size": { "width": 2048, "height": 1216 },
      "border_radius": 24,
      "image_fit": "cover"
    },
    {
      "type": "text",
      "text": "${title}",
      "position": { "x": 300, "y": 1516 },
      "font_size": 96,
      "color": "${theme_color}",
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "max_width": 2048,
      "line_height": 1.2,
      "letter_spacing": -0.5
    },
    {
      "type": "text",
      "text": "${excerpt}",
      "position": { "x": 300, "y": 1766 },
      "font_size": 56,
      "color": [75, 85, 99, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 2048,
      "line_height": 1.5
    },
    {
      "type": "rectangle",
      "position": { "x": 300, "y": 1986 },
      "size": { "width": 2048, "height": 1 },
      "fill_color": [229, 231, 235, 1],
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": { "x": 300, "y": 2026 },
      "size": { "width": 120, "height": 120 },
      "fill_color": [229, 231, 235, 1],
      "border_radius": 60,
      "outline_color": [255, 255, 255, 1],
      "outline_width": 3
    },
    {
      "type": "text",
      "text": "${author}",
      "position": { "x": 450, "y": 2036 },
      "font_size": 48,
      "color": [17, 24, 39, 1],
      "font_path": "Outfit-SemiBold",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${publish_date} â€¢ ${read_time} min read",
      "position": { "x": 450, "y": 2096 },
      "font_size": 40,
      "color": [107, 114, 128, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "Read more at ${website_url}",
      "position": { "x": 300, "y": 2266 },
      "font_size": 40,
      "color": [59, 130, 246, 1],
      "font_path": "Outfit-Medium",
      "alignment": "left"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 2150, "y": 2266 },
      "size": { "width": 200, "height": 200 },
      "circle_crop": true,
      "border_width": 2,
      "border_color": [243, 244, 246, 1]
    }
  ]
}
