{
  "name": "sale_alert",
  "description": "Clean Q&A template with centered profile picture and question/answer layout",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "fill_color": "#f1c993",
      "outline_color": null
    },
    {
      "type": "cta_button",
      "text": "",
      "position": { "x": 700, "y": 100 },
      "size": { "width": 300, "height": 550 },
      "font_size": 50,
      "color": "#5d3215",
      "bg_color": "#5d3215",
      "font_path": "EBGaramond-Regular",
      "alignment": "left",
      "max_width": 250,
      "corner_radius": 200
    },
    {
      "type": "text",
      "text": "${sale_text}",
      "position": { "x": 750, "y": 160 },
      "font_size": 100,
      "color": "#ffffff",
      "font_path": "MarckScript-Regular",
      "alignment": "center",
      "max_width": 200,
      "corner_radius": 200
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 400, "y": 350 },
      "size": { "width": 800, "height": 800 },
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${sale_heading}",
      "position": { "x": 70, "y": 100 },
      "font_size": 120,
      "color": "#8a4803",
      "font_path": "seasons",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${sale_description}",
      "position": { "x": 70, "y": 400 },
      "font_size": 50,
      "color": "#8a4803",
      "font_path": "EBGaramond-Regular",
      "alignment": "left",
      "max_width": 250
    },

    {
      "type": "rectangle",
      "position": { "x": 400, "y": 300 },
      "size": { "width": 250, "height": 3 },
      "fill_color": "#8a4803",
      "outline_color": null
    },

    {
      "type": "rectangle",
      "position": { "x": 150, "y": 650 },
      "size": { "width": 3, "height": 200 },
      "fill_color": "#8a4803",
      "outline_color": null
    },
    {
      "type": "cta_button",
      "position": { "x": -30, "y": 950 },
      "size": { "width": 0, "height": 65 },
      "padding": 100,
      "auto_width": true,
      "corner_radius": 90,
      "text": "${cta_text}",
      "font_size": 40,
      "color": "#ffffff",
      "bg_color": "#a67339",
      "font_path": "Raleway-Medium",
      "alignment": "right"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 60, "y": 1020 },
      "font_size": 25,
      "color": "#b0571c",
      "font_path": "Poppins-Light",
      "alignment": "left",
      "max_width": 1080
    }
  ]
}
