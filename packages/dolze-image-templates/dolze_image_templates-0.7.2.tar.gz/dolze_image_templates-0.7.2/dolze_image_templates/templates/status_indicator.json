{
  "name": "status_indicator",
  "description": "A simple status indicator that toggles between DEFAULT and ACTIVE states",
  "size": {
    "width": 400,
    "height": 200
  },
  "background_color": [245, 247, 250],
  "components": [
    {
      "type": "rectangle",
      "x": 100,
      "y": 75,
      "width": 200,
      "height": 60,
      "fill_color": "${status_color}",
      "border_radius": 30,
      "box_shadow": {
        "offset_x": 0,
        "offset_y": 4,
        "blur_radius": 8,
        "color": [0, 0, 0, 30]
      }
    },
    {
      "type": "text",
      "x": 200,
      "y": 105,
      "text": "${status_text}",
      "font_size": 22,
      "color": [255, 255, 255],
      "font_weight": "bold",
      "align": "center"
    },
    {
      "type": "text",
      "x": 200,
      "y": 45,
      "text": "Status:",
      "font_size": 16,
      "color": [100, 100, 120],
      "align": "center"
    }
  ]
}
