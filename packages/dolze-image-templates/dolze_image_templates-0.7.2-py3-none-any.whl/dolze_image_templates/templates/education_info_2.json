{
  "name": "education_info_2",
  "description": "Modern educational template with clean design, gradient background, and circular image focus",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#F0F4FF", "#E6F0FF"],
        "direction": 135
      },
      "border_radius": 0
    },
    {
      "type": "rectangle",
      "position": { "x": 100, "y": 100 },
      "size": { "width": 2360, "height": 2360 },
      "fill_color": [255, 255, 255, 0.95],
      "border_radius": 80
    },
    {
      "type": "circle",
      "position": { "x": 780, "y": 300 },
      "size": { "width": 1000, "height": 1000 },
      "fill_color": [255, 255, 255, 1]
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 800, "y": 320 },
      "size": { "width": 960, "height": 960 },
      "circle_crop": true,
      "border_width": 10,
      "border_color": [255, 255, 255, 1]
    },
    {
      "type": "rectangle",
      "position": { "x": 480, "y": 1400 },
      "size": { "width": 1600, "height": 4 },
      "fill_color": [100, 100, 255, 0.5],
      "border_radius": 2
    },
    {
      "type": "text",
      "text": "DID YOU KNOW?",
      "position": { "x": 480, "y": 1420 },
      "font_path": "Roboto-Bold",
      "font_size": 64,
      "color": [70, 90, 255, 1],
      "max_width": 1600,
      "line_spacing": 1.2,
      "align": "center",
      "letter_spacing": 2
    },
    {
      "type": "text",
      "text": "${product_info}",
      "position": { "x": 480, "y": 1500 },
      "font_path": "Roboto-SemiBold",
      "font_size": 84,
      "color": [30, 30, 40, 1],
      "max_width": 1600,
      "line_spacing": 1.3,
      "align": "center"
    },
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 2200 },
      "size": { "width": 2560, "height": 360 },
      "fill_color": [245, 247, 250, 0.95],
      "gradient_config": {
        "type": "linear",
        "colors": [
          [245, 247, 250, 0.95],
          [235, 238, 245, 0.95]
        ],
        "direction": 90
      },
      "border_radius": 0
    },
    {
      "type": "rectangle",
      "position": { "x": 200, "y": 2300 },
      "size": { "width": 120, "height": 4 },
      "fill_color": [100, 100, 255, 1],
      "border_radius": 2
    },
    {
      "type": "text",
      "text": "${author}",
      "position": { "x": 200, "y": 2320 },
      "font_path": "Roboto-Bold",
      "font_size": 56,
      "color": [30, 30, 40, 1],
      "max_width": 1000,
      "line_spacing": 1.2,
      "align": "left"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 200, "y": 2400 },
      "font_path": "Roboto-Medium",
      "font_size": 42,
      "color": [120, 120, 140, 1],
      "max_width": 1000,
      "line_spacing": 1.2,
      "align": "right"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 2100, "y": 100 },
      "size": { "width": 250, "height": 250 },
      "circle_crop": true,
      "glow_color": [68, 236, 157, 0.3]
    }
  ]
}
