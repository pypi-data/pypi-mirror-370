{
  "name": "coming_soon",
  "description": "Coming soon template",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "tint": {
        "type": "linear",
        "center": [0.5, 0.5],
        "colors": [
          [1, 1, 1, 1],
          [1, 1, 1, 0.9],
          [1, 1, 1, 0.8],
          [1, 1, 1, 0.6],
          [1, 1, 1, 0.2],
          [1, 1, 1, 0.0],
          [1, 1, 1, 0.0]
        ],
        "opacity": 0.9
      },
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 60, "y": 300 },
      "size": { "width": 200, "height": 200 },
      "circle_crop": true
    },
    {
      "type": "text",
      "text": "${business_name}",
      "position": { "x": 60, "y": 500 },
      "font_size": 50,
      "color": [255, 255, 255, 1],
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 540
    },
    {
      "type": "text",
      "text": "${text}",
      "position": { "x": 60, "y": 650 },
      "font_size": 100,
      "color": [255, 255, 255, 1],
      "font_path": "Dream_Avenue",
      "alignment": "left",
      "max_width": 540
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 60, "y": 950 },
      "font_size": 30,
      "color": [255, 255, 255, 1],
      "font_path": "Montserrat-Medium",
      "alignment": "left",
      "max_width": 540
    },
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 1000 },
      "size": { "width": 1080, "height": 8 },
      "fill_color": [255, 255, 255, 1]
    }
  ]
}
