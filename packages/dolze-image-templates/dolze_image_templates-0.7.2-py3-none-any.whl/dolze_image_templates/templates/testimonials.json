{
  "name": "testimonials",
  "size": { "width": 840, "height": 1060 },
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/mbcEtwwJKCf7jn4GnfzFm1thlhC3/6829afe6925fb5ef8c087942/business_assets/Yellow.png",
      "position": { "x": -10, "y": 0 },
      "size": { "width": 860, "height": 1060 }
    },
    {
      "type": "image",
      "rotate": 1.8,
      "image_url": "${product_image}",
      "position": { "x": 100, "y": 96 },
      "size": { "width": 630, "height": 420 },

      "aspect_ratio": "stretch"
    },
    {
      "type": "text",
      "text": "${name}",
      "rotate": 2.0,
      "position": { "x": 30, "y": 250 },
      "max_width": 660,
      "font_size": 70,
      "alignment": "center",
      "color": [1, 1, 1, 1],
      "font_path": "MarckScript-Regular"
    },
    {
      "type": "text",
      "text": "${designation}",
      "position": { "x": 50, "y": 740 },
      "font_size": 40,
      "max_width": 740,
      "alignment": "center",
      "color": [1, 1, 1, 1],
      "font_path": "Raleway-Light"
    },
    {
      "type": "text",
      "text": "${greeting}",
      "position": { "x": 100, "y": 620 },
      "font_size": 80,
      "max_width": 640,
      "alignment": "center",
      "color": [1, 1, 1, 1],
      "font_path": "MarckScript-Regular"
    },
    {
      "type": "text",
      "text": "${social_handle}",
      "position": { "x": 0, "y": 0 },
      "font_size": 40,
      "max_width": 820,
      "alignment": "right",
      "color": [1, 1, 1, 1],
      "font_path": "Raleway-Light"
    }
  ]
}
