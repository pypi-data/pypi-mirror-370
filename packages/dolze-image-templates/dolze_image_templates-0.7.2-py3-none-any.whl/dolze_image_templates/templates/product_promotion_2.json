{
  "name": "product_promotion_2",
  "description": "Enhanced product promotion template with a modern Kanban UI aesthetic",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": null,
      "gradient": {
        "type": "linear",
        "colors": ["${theme_color}", "#E8E8E8"],
        "direction": 45
      },
      "outline_color": null,
      "border_radius": 40
    },
    {
      "type": "rectangle",
      "position": { "x": 50, "y": 50 },
      "size": { "width": 2460, "height": 2460 },
      "fill_color": [255, 255, 255, 0.95],
      "border_radius": 40
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 150, "y": 150 },
      "size": { "width": 160, "height": 160 },
      "alignment": "left",
      "circle_crop": true
    },
    {
      "type": "text",
      "text": "${quote1}",
      "position": { "x": 150, "y": 350 },
      "font_size": 160,
      "color": "${theme_color}",
      "font_path": "Outfit-Black",
      "alignment": "left",
      "max_width": 2200,
      "line_spacing": 1.3
    },
    {
      "type": "text",
      "text": "${quote2}",
      "position": { "x": 150, "y": 600 },
      "font_size": 120,
      "color": [100, 100, 120],
      "font_path": "Outfit-Medium",
      "alignment": "left",
      "max_width": 2200,
      "line_spacing": 1.4
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 150, "y": 800 },
      "size": { "width": 2260, "height": 1500 },
      "border_radius": 30
    }
  ]
}
