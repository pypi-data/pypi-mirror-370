{
  "name": "product_showcase_4",
  "description": "Enhanced product advertisement template for the products",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/5ff29f70-cfd8-498d-86fe-c4b3eb2d3f7d.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 200, "y": 20 },
      "size": { "width": 950, "height": 850 }
    },
    {
      "type": "text",
      "text": "${offer_text}",
      "position": { "x": 30, "y": 680 },
      "font_size": 80,
      "color": [255, 255, 255, 1],
      "font_path": "Montserrat-Bold",
      "alignment": "left",
      "max_width": 430
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 0, "y": 1040 },
      "font_size": 30,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-Medium",
      "line_spacing": 1.3,
      "max_width": 1080,
      "alignment": "center"
    }
  ]
}
