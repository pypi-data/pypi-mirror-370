{
  "name": "product_promotion",
  "description": "Modern split-screen product promotion with image on left and content on right",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1280, "height": 2560 },
      "fill_color": [245, 247, 250],
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 140, "y": 280 },
      "size": { "width": 1000, "height": 2000 },
      "opacity": 1.0,
      "border_radius": 60,
      "border_width": 2,
      "border_color": [240, 240, 245]
    },
    {
      "type": "rectangle",
      "position": { "x": 1280, "y": 0 },
      "size": { "width": 1280, "height": 2560 },
      "fill_color": [255, 255, 255],
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 1920, "y": 100 },
      "size": { "width": 160, "height": 160 },
      "opacity": 1.0,
      "circle_crop": true,
      "border_width": 6,
      "border_color": [255, 255, 255]
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": { "x": 1480, "y": 400 },
      "font_size": 96,
      "color": [30, 30, 40],
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "max_width": 1000,
      "line_height": 1.2,
      "letter_spacing": -0.5,
      "line_spacing": 1.4
    },
    {
      "type": "rectangle",
      "position": { "x": 1480, "y": 600 },
      "size": { "width": 820, "height": 6 },
      "fill_color": [70, 90, 255],
      "border_radius": 3
    },
    {
      "type": "text",
      "text": "${subheading}",
      "position": { "x": 1480, "y": 650 },
      "font_size": 60,
      "color": [90, 90, 110],
      "font_path": "Outfit-Medium",
      "alignment": "left",
      "max_width": 1000,
      "line_height": 1.6,
      "letter_spacing": 0.2,
      "line_spacing": 1.6
    },
    {
      "type": "rectangle",
      "position": { "x": 1480, "y": 2100 },
      "size": { "width": 800, "height": 160 },
      "fill_color": "${theme_color}",
      "border_radius": 80
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": { "x": 1680, "y": 2150 },
      "size": { "width": 800, "height": 160 },
      "font_size": 56,
      "color": [255, 255, 255],
      "font_path": "Outfit-Bold",
      "alignment": "center",
      "line_height": 1.2,
      "line_spacing": 1.4
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 1480, "y": 2300 },
      "font_size": 40,
      "color": [150, 150, 160],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "line_height": 1.2,
      "line_spacing": 1.4
    },
    {
      "type": "rectangle",
      "position": { "x": 1260, "y": 0 },
      "size": { "width": 40, "height": 2560 },
      "fill_color": [240, 240, 245],
      "outline_color": null
    }
  ]
}
