{
  "name": "product_showcase",
  "description": "Modern premium product showcase with elegant card, gradients, and emphasis on product imagery",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": null,
      "gradient": {
        "type": "linear",
        "colors": ["#e0eafc", "#cfdef3"],
        "direction": 120
      }
    },
    {
      "type": "polygon",
      "points": [
        [1960, 0],
        [2560, 180],
        [2560, 0]
      ],
      "position": { "x": 0, "y": 0 },
      "fill_color": [123, 167, 188, 0.1],
      "opacity": 1
    },
    {
      "type": "polygon",
      "points": [
        [0, 2560],
        [580, 2560],
        [0, 2380]
      ],
      "position": { "x": 0, "y": 0 },
      "fill_color": [123, 167, 188, 0.1],
      "opacity": 1
    },
    {
      "type": "rectangle",
      "position": { "x": 430, "y": 420 },
      "size": { "width": 1700, "height": 1700 },
      "fill_color": "#fff",
      "border_radius": 60
    },
    {
      "type": "image",
      "position": { "x": 630, "y": 520 },
      "size": { "width": 1300, "height": 900 },
      "image_url": "${product_image}",
      "border_radius": 46
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 2010, "y": 490 },
      "size": { "width": 130, "height": 130 },
      "circle_crop": true,
      "border_width": 5,
      "border_color": [255, 255, 255, 1]
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": { "x": 630, "y": 1550 },
      "font_size": 90,
      "color": [40, 49, 73, 1],
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "max_width": 800,
      "line_spacing": 1.2
    },
    {
      "type": "text",
      "text": "${product_price}",
      "position": { "x": 1490, "y": 1550 },
      "font_size": 100,
      "color": "#7BA7BC",
      "font_path": "Outfit-Bold",
      "alignment": "right",
      "max_width": 400,
      "line_spacing": 1.2
    },
    {
      "type": "rectangle",
      "position": { "x": 630, "y": 1670 },
      "size": { "width": 1260, "height": 6 },
      "fill_color": "#cfdef3",
      "border_radius": 3
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": { "x": 680, "y": 1710 },
      "font_size": 58,
      "color": [40, 49, 73, 0.94],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 1200,
      "line_spacing": 1.4
    },
    {
      "type": "rectangle",
      "position": { "x": 1130, "y": 1960 },
      "size": { "width": 400, "height": 108 },
      "fill_color": "#7BA7BC",
      "border_radius": 54
    },
    {
      "type": "text",
      "text": "Buy Now",
      "position": { "x": 1180, "y": 1985 },
      "font_size": 54,
      "color": "#fff",
      "font_path": "Outfit-SemiBold",
      "alignment": "center",
      "max_width": 300,
      "line_height": 1.3
    }
  ]
}
