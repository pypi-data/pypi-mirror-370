{
  "name": "product_showcase_5",
  "description": "Enhanced product advertisement template for the products",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesbg.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },
    {
      "type": "image",
      "image_url": "${product_image}",

      "position": { "x": 500, "y": 200 },
      "size": { "width": 600, "height": 600 }
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": { "x": 30, "y": 310 },
      "font_size": 50,
      "color": [255, 255, 255, 1],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${subheading}",
      "position": { "x": 30, "y": 480 },
      "font_size": 30,
      "color": [1, 1, 1, 1],
      "font_path": "Poppins-Medium",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "cta_button",
      "text": "${cta_text}",
      "position": { "x": 30, "y": 730 },
      "auto_width": true,
      "padding": 80,
      "bg_color": [1, 1, 1, 1],
      "text_color": "#FFFFFF",
      "font_size": 30,
      "font_path": "Poppins-Light",
      "corner_radius": 80
    },
    {
      "type": "text",
      "text": "${contact_number}",
      "position": { "x": 300, "y": 735 },
      "font_size": 30,
      "color": [1, 1, 1, 1],
      "font_path": "Poppins-Light",
      "alignment": "left",
      "max_width": 430
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 115, "y": 35 },
      "font_size": 27,
      "color": [1, 1, 1, 1],
      "font_path": "Poppins-Light",
      "alignment": "right",
      "max_width": 800
    }
  ]
}
