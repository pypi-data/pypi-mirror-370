{
    "name": "cookie_poster",
    "description": "Promo template with blue background, bold headline, cookie image, and CTA button",
    "size": {
      "width": 1080,
      "height": 1080
    },
    "use_base_image": false,
    "components": [
      {
        "type": "image",
        "image_url": "${background_image_url}",
        "position": {
          "x": 0,
          "y": 0
        },
        "size": {
          "width": 1080,
          "height": 1080
        },
        "image_fit": "cover"
      },
      {
        "type": "image",
        "image_url": "${logo_url}",
        "position": {
          "x": 400,
          "y": 40
        },
        "size": {
          "width": 250,
          "height": 75
        },
        "image_fit": "contain"
      },
      {
        "type": "text",
        "text": "${headline}",
        "position": {
          "x": 60,
          "y": 140
        },
        "font_size": 90,
        "color": "#ffffff",
        "font_path": "Poppins-Bold",
        "alignment": "center",
        "max_width": 960
      },
      {
        "type": "text",
        "text": "${subtitle}",
        "position": {
          "x": 60,
          "y": 255
        },
        "font_size": 40,
        "color": "#ffffff",
        "font_path": "Poppins-Regular",
        "alignment": "center",
        "max_width": 960
      },
      {
        "type": "rectangle",
        "position": {
          "x": 390,
          "y": 340
        },
        "size": {
          "width": 300,
          "height": 70
        },
        "fill_color": "${theme_color}",
        "border_radius": 35
      },
      {
        "type": "text",
        "text": "${cta_text}",
        "position": {
          "x": 390,
          "y": 355
        },
        "font_size": 30,
        "color": "#ffffff",
        "font_path": "Poppins-Bold",
        "alignment": "center",
        "max_width": 300
      },
      {
        "type": "image",
        "image_url": "${cookie_image_url}",
        "position": {
          "x": 85,
          "y": 360
        },
        "size": {
          "width": 920,
          "height": 730
        },
        "image_fit": "contain"
      }
    ]
  }
  