{
  "name": "product_showcase_3",
  "description": "Enhanced product advertisement template for the products",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/33e90225-ffdc-4b8c-936b-7ca1343634b9.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 200, "y": 20 },
      "size": { "width": 950, "height": 850 }
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": { "x": 50, "y": 780 },
      "font_size": 80,
      "color": [255, 255, 255, 1.0],
      "font_path": "Raleway-Bold",
      "alignment": "left",
      "max_width": 1000,
      "line_spacing": 1.2
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": { "x": 60, "y": 930 },
      "font_size": 40,
      "color": [255, 255, 255, 0.9],
      "font_path": "Raleway-Light",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": { "x": 600, "y": 970 },
      "font_size": 45,
      "color": [1, 1, 1, 1.0],
      "font_path": "Raleway-Bold",
      "line_spacing": 1.3,
      "max_width": 400,
      "alignment": "center"
    },

    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 550, "y": 1040 },
      "font_size": 30,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-Regular",
      "line_spacing": 1.3,
      "max_width": 600
    }
  ]
}
