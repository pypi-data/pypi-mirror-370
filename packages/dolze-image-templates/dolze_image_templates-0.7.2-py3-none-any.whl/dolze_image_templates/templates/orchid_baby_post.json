{
    "name": "orchid_baby_post",
    "description": "Promotional post template for Orchid featuring a baby image, bold headline, and CTA button.",
    "size": {
        "width": 1080,
        "height": 1350
    },
    "use_base_image": false,
    "components": [
        {
            "type": "image",
            "image_url": "${background_image_url}",
            "position": {
                "x": 0,
                "y": 0
            },
            "size": {
                "width": 1080,
                "height": 1350
            }
        },
        {
            "type": "image",
            "image_url": "${baby_image}",
            "position": {
                "x": 400,
                "y": 480
            },
            "size": {
                "width": 700,
                "height": 890
            },
            "image_fit": "cover"
        },

        {
            "type": "image",
            "image_url": "${gradient_bg}",
            "position": {
                "x": 0,
                "y": 950
            },
            "size": {
                "width": 1080,
                "height": 400
            },
            "image_fit": "cover"
        },
   
        {
            "type": "image",
            "image_url": "${logo_url}",
            "position": {
                "x": 60,
                "y": 80
            },
            "size": {
                "width": 280,
                "height": 100
            },
            "image_fit": "contain"
        },
        {
            "type": "text",
            "text": "${excerpt}",
            "position": {
                "x": 60,
                "y": 250
            },
            "font_size": 72,
            "color": "#1E1E1E",
            "font_path": "Poppins-Bold",
            "alignment": "left",
            "max_width": 600,
            "line_height": 1.2
        },
        {
            "type": "text",
            "text": "${text_subtext}",
            "position": {
                "x": 60,
                "y": 450
            },
            "font_size": 48,
            "color": "#1E1E1E",
            "font_path": "Poppins-Regular",
            "alignment": "left",
            "max_width": 600,
            "line_height": 1.2
        },
        {
            "type": "rectangle",
            "position": {
                "x": 60,
                "y": 1160
            },
            "size": {
                "width": 450,
                "height": 100
            },
            "fill_color": "#f8f9fa",
            "border_radius": 60
        },
        {
            "type": "text",
            "text": "${button_text}",
            "position": {
                "x": 100,
                "y": 1180
            },
            "font_size": 42,
            "color": "#1E1E1E",
            "font_path": "Poppins-Medium",
            "alignment": "left",
            "max_width": 400
        }
    ]
}