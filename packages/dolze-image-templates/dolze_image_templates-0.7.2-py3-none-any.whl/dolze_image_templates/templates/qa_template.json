{
  "name": "qa_template",
  "description": "Clean Q&A template with centered profile picture and question/answer layout",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 250, "y": 250 },
      "size": { "width": 300, "height": 300 },
      "circle_crop": true
    },
    {
      "type": "text",
      "text": "${question}",
      "position": { "x": 250, "y": 850 },
      "font_size": 240,
      "color": [40, 40, 40],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "max_width": 2100
    },
    {
      "type": "text",
      "text": "${answer}",
      "position": { "x": 250, "y": 1450 },
      "font_size": 120,
      "color": [100, 100, 100],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "max_width": 2000,
      "line_spacing": 1.4
    },
    {
      "type": "text",
      "text": "${username}",
      "position": { "x": 280, "y": 2400 },
      "font_size": 55,
      "color": [1, 1, 1],
      "font_path": "Roboto-Italic",
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 1800, "y": 2400 },
      "font_size": 55,
      "color": [1, 1, 1],
      "font_path": "Roboto-Italic",
      "alignment": "center"
    }
  ]
}
