# Include the README and other documentation
include README.md
include DEVELOPMENT_GUIDE.md
include MIGRATION_TO_ZERO_CONFIG.md
include requirements.txt
include LICENSE

# Include example files
recursive-include examples *.py
recursive-include examples *.md

# Include test files
recursive-include tests *.py
recursive-include tests *.md

# Include API templates and static files
recursive-include united_llm/api/templates *.html
recursive-include united_llm/api/static *.css *.js *.ico

# Include configuration files
include .env.united_llm.example

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
