#!/usr/bin/env python3
"""
ðŸš€ JTECHâ„¢ Core Installer - Wrapper de execuÃ§Ã£o direta
"""

import subprocess
import sys
from pathlib import Path

# Determinar o caminho do script principal
script_dir = Path(__file__).parent
main_script = script_dir / "src" / "jtech_installer" / "cli" / "main.py"

if main_script.exists():
    # Executar via script direto
    subprocess.run([sys.executable, str(main_script)] + sys.argv[1:])
else:
    # Executar via mÃ³dulo
    subprocess.run([sys.executable, "-m", "jtech_installer.cli.main"] + sys.argv[1:])
