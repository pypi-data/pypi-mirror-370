{
  "command": "chunk_create",
  "summary": "Create chunks in the vector store",
  "description": "Create one or many chunk records with 384-dimensional embeddings",
  "parameters": {
    "chunks": {
      "type": "array",
      "description": "Array of chunk metadata objects for creation",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "body": {
            "type": "string",
            "description": "Original chunk text (required)",
            "minLength": 1,
            "maxLength": 10000
          },
          "text": {
            "type": "string",
            "description": "Normalized text for search (optional, defaults to body)",
            "minLength": 0,
            "maxLength": 10000
          },
          "type": {
            "type": "string",
            "description": "Chunk type (e.g., 'Draft', 'DocBlock')",
            "enum": ["Draft", "DocBlock", "CodeBlock", "Message", "Section", "Other"]
          },
          "language": {
            "type": "string",
            "description": "Language code (e.g., 'en', 'ru', 'python')"
          },
          "category": {
            "type": "string",
            "description": "Business category (e.g., 'science', 'programming')",
            "maxLength": 64
          },
          "title": {
            "type": "string",
            "description": "Title or short name",
            "maxLength": 256
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of tags for classification"
          }
        },
        "required": ["body"],
        "additionalProperties": true
      }
    }
  },
  "required": ["chunks"],
  "examples": {
    "create_single_chunk": {
      "description": "Create a single chunk",
      "request": {
        "jsonrpc": "2.0",
        "method": "chunk_create",
        "params": {
          "chunks": [
            {
              "body": "This is a sample text for testing",
              "text": "This is a sample text for testing",
              "type": "DocBlock",
              "language": "en",
              "category": "testing",
              "title": "Sample Text"
            }
          ]
        },
        "id": 1
      }
    },
    "create_multiple_chunks": {
      "description": "Create multiple chunks",
      "request": {
        "jsonrpc": "2.0",
        "method": "chunk_create",
        "params": {
          "chunks": [
            {
              "body": "First chunk text",
              "type": "DocBlock",
              "language": "en"
            },
            {
              "body": "Second chunk text",
              "type": "CodeBlock",
              "language": "python"
            }
          ]
        },
        "id": 1
      }
    }
  }
} 