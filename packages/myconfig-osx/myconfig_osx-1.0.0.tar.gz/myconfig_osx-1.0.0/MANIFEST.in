# Include important files
include README.md
include LICENSE
include pyproject.toml
include MANIFEST.in

# Include all source code
recursive-include src *.py
recursive-include src/templates *.template

# Include configuration files
recursive-include config *.toml *.txt
graft config

# Include documentation
recursive-include docs *.md
graft docs

# Include contribution files
recursive-include contrib *

# Exclude unnecessary files
exclude .gitignore
exclude .gitattributes
exclude .gitmessage
exclude *.code-workspace

# Exclude directories
prune .git
prune backups
prune logs
prune __pycache__
prune *.egg-info
prune build
prune dist

# Exclude test files (if any)
prune tests

# Exclude development files
exclude .mypy_cache
exclude .pytest_cache
exclude .coverage
exclude tox.ini
