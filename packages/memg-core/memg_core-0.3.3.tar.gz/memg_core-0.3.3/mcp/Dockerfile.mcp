FROM python:3.11-slim
ENV PIP_DISABLE_PIP_VERSION_CHECK=1 PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends curl && rm -rf /var/lib/apt/lists/*

# Copy the *directory* (works even if empty, as long as it exists in context)
COPY dist/ /tmp/dist/

# Prefer local wheel if present; else PyPI
RUN set -e; \
    if find /tmp/dist -maxdepth 1 -name '*.whl' -print -quit | grep -q .; then \
        LATEST_WHEEL=$(find /tmp/dist -name '*.whl' | sort -V | tail -1); \
        pip install --no-cache-dir "$LATEST_WHEEL"; \
    else \
        pip install --no-cache-dir memg-core; \
    fi

RUN pip install --no-cache-dir "fastmcp>=2.10.6" "starlette>=0.37"
COPY mcp/mcp_server.py /app/

RUN mkdir -p /qdrant /kuzu
ENV QDRANT_STORAGE_PATH=/qdrant KUZU_DB_PATH=/kuzu/memory_db MEMORY_SYSTEM_MCP_PORT=8787

EXPOSE 8787
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f "http://localhost:${MEMORY_SYSTEM_MCP_PORT}/health" || exit 1

CMD ["python", "mcp_server.py"]
