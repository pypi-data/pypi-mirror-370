# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include INSTALLATION_GUIDE.md
include API_REFERENCE.md
include FEATURES.md
include FUNCTIONALITIES.md
include CONFIGURATIONS.md
include SECURITY_GUIDE.md
include SECURITY_EXAMPLES.md
include JS_ARCHITECTURE.md
include SEARCH_DROPDOWN_FIX.md
include BUTTON_POSITIONING_FIX.md

# Include static files
recursive-include django_jqgrid/static *
recursive-include django_jqgrid/templates *

# Include package data
recursive-include django_jqgrid *.py
recursive-include django_jqgrid/migrations *.py

# Exclude development files
exclude .gitignore
exclude .flake8
exclude .pytest_cache
exclude pytest.ini
exclude tox.ini
exclude .coverage
exclude setup.cfg
exclude publish_package.py
exclude .pypi_tokens.conf
exclude .claude_update_prompt.txt
exclude debug_*.py
exclude debug_*.bat
exclude test_*.py
exclude publish.bat
exclude publish.sh

# Exclude virtual environments
recursive-exclude .venv *
recursive-exclude venv *
recursive-exclude env *
recursive-exclude ENV *
recursive-exclude example_env *
recursive-exclude .env *
recursive-exclude virtualenv *

# Exclude build and cache directories
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * .mypy_cache
recursive-exclude * .pytest_cache
recursive-exclude * *.egg-info
recursive-exclude build *
recursive-exclude dist *
recursive-exclude .eggs *
recursive-exclude htmlcov *
recursive-exclude .tox *
recursive-exclude .nox *
recursive-exclude .hypothesis *
recursive-exclude .coverage.* *

# Exclude IDE and editor files
recursive-exclude .vscode *
recursive-exclude .idea *
recursive-exclude .claude *
recursive-exclude * *.swp
recursive-exclude * *.swo
recursive-exclude * *~
recursive-exclude * *.orig
recursive-exclude * *.bak
recursive-exclude * *.tmp

# Exclude example project and tests from package
recursive-exclude example_project *
recursive-exclude tests * 

# Exclude documentation build
recursive-exclude docs/_build *
recursive-exclude site *