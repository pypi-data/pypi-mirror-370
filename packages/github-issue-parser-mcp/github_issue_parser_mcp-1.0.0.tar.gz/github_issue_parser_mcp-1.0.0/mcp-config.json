{
  "name": "GitHub Issue Parser",
  "description": "An MCP server that parses GitHub issues and returns formatted plain text content including comments and reactions",
  "author": "Your Name",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://github.com/Anionex/github-issue-parser-MCP-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anionex/github-issue-parser-MCP-server"
  },
  "keywords": [
    "mcp",
    "github",
    "issues",
    "parser",
    "modelscope"
  ],
  "mcp": {
    "server": {
      "command": "uvx",
      "args": [
        "python",
        "github_issue_parser.py"
      ],
      "env": {
        "PYTHONPATH": "."
      },
      "transport": "streamable-http"
    },
    "tools": [
      {
        "name": "parse_github_issue",
        "description": "Parse a GitHub issue URL and return formatted plain text content",
        "inputSchema": {
          "type": "object",
          "properties": {
            "issue_url": {
              "type": "string",
              "description": "GitHub issue URL (e.g., https://github.com/owner/repo/issues/123)"
            }
          },
          "required": ["issue_url"]
        }
      }
    ],
    "resources": [
      {
        "uri": "github-issue://{url}",
        "description": "Get formatted GitHub issue content as a resource"
      }
    ],
    "prompts": [
      {
        "name": "analyze_github_issue",
        "description": "Generate a prompt for analyzing a GitHub issue",
        "arguments": [
          {
            "name": "issue_url",
            "description": "GitHub issue URL",
            "required": true
          },
          {
            "name": "analysis_type",
            "description": "Type of analysis (summary, technical, priority)",
            "required": false,
            "default": "summary"
          }
        ]
      }
    ]
  }
}