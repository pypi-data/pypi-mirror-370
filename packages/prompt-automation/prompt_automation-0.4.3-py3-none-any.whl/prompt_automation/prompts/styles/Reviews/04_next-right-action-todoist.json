{
  "schema": 1,
  "id": 4,
  "title": "Next Right Action Todoist",
  "style": "Reviews",
  "placeholders": [
    {
      "name": "next_action",
      "label": "Next Action: (I will...)",
      "multiline": false,
      "default": "",
      "remove_if_empty": [
        "I will",
        "Next Action",
        "- Next Action"
      ]
    },
    {
      "name": "so_that",
      "label": "Objective: (so that...)\nWhy is this important or How does it contribute to the desired result?",
      "multiline": false,
      "default": "",
      "remove_if_empty": [
        "So That",
        "- So That",
        "so that I can"
      ]
    },
    {
      "name": "approach",
      "label": "Approach (How will you execute? Steps / strategy)",
      "multiline": true,
      "default": "",
      "format": "list",
      "remove_if_empty": [
        "Approach",
        "- Approach",
        "I will take the following approach"
      ]
    },
    {
      "name": "time_estimate",
      "label": "Time Estimate (e.g. 30m, 2h, 1 pomodoro)",
      "multiline": false,
      "default": "",
      "remove_if_empty": [
        "It will take",
        "Time Estimate",
        "- Time Estimate"
      ]
    }
  ],
  "template": [
    "I will {{next_action}} so that {{so_that}}. \nI focus on doing the following things: {{approach}}. \nIt will take {{time_estimate}}."
  ],
  "metadata": {
    "path": "Reviews/next-right-action-todoist.json",
    "tags": [
      "todoist",
      "next-action",
      "planning",
      "focus"
    ],
    "version": 4,
    "trim_blanks": true,
    "render": "markdown",
    "share_this_file_openly": true
  }
}