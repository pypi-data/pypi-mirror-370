{
  "schema": 1,
  "id": 3,
  "title": "Next Right Action Todoist",
  "style": "Reviews",
  "placeholders": [
    {
      "name": "next_action",
      "label": "Next Action (What will you concretely do next?)",
      "multiline": true,
      "default": "",
      "format": "list",
      "remove_if_empty": [
        "I will",
        "Next Action",
        "- Next Action"
      ]
    },
    {
      "name": "why",
      "label": "Purpose / End State (Why & what end state will this move toward?)",
      "multiline": true,
      "default": "",
      "remove_if_empty": [
        "so that",
        "Purpose / End State",
        "- Purpose / End State"
      ]
    },
    {
      "name": "approach",
      "label": "Approach (How will you execute? Steps / strategy)",
      "multiline": true,
      "default": "",
      "format": "list",
      "remove_if_empty": [
        "Approach",
        "- Approach",
        "I will take the following approach"
      ]
    },
    {
      "name": "time_estimate",
      "label": "Time Estimate (e.g. 30m, 2h, 1 pomodoro)",
      "multiline": false,
      "default": "",
      "remove_if_empty": [
        "It will take",
        "Time Estimate",
        "- Time Estimate"
      ]
    },
    {
      "name": "risks",
      "label": "Risks / Constraints (Optional)",
      "multiline": true,
      "default": "",
      "format": "list",
      "remove_if_empty": [
        "Risks / Constraints",
        "- Risks / Constraints"
      ]
    }
  ],
  "template": [
    "I will {{next_action}} so that {{why}}. I will take the following approach {{approach}}. It will take {{time_estimate}}. {{risks}}"
  ],
  "metadata": {
    "path": "Reviews/next-right-action-todoist.json",
    "tags": [
      "todoist",
      "next-action",
      "planning",
      "focus"
    ],
    "version": 4,
    "trim_blanks": true,
    "render": "markdown",
    "share_this_file_openly": true
  }
}