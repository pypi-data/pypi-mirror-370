<mujoco model="so_arm_main">
    <!-- Include SO-ARM101 robot model -->
    <include file="so-arm100.xml"/>
    
    <!-- Additional scene elements -->
    <worldbody>
        <!-- Table -->
        <body name="table" pos="0 0.4 0">
            <geom group="1" type="box" size="0.32 0.225 0.02" pos="0 0 -0.02" conaffinity="1" contype="1" 
                  name="table" material="table_material" friction="0.8 0.5 0.01" />
        </body>

        <!-- Reference point for camera targeting -->
        <body name="workspace_center" pos="0 0.35 0.2">
            <site pos="0 0 0" size="0.01" type="sphere" name="workspace_center" rgba="1 0 0 0"/>
        </body>

        <!-- Debug: Red ball at origin position -->
<!--        <body name="origin_ball" pos="0 0 0.02">-->
        <body name="origin_ball" pos="0 0.0 0.02">
            <geom name="origin_ball" type="sphere" size="0.02" 
                  contype="0" conaffinity="0" rgba="1 0 0 1"/>
        </body>

        <!-- Objects for manipulation tasks -->
        <body name="blue_cube" pos="0.25 0.45 0.05">
            <joint name="blue_cube" type="free" frictionloss="0.01"/>
            <inertial pos="0 0 0" mass="0.05" diaginertia="0.001 0.001 0.001"/>
            <geom condim="4" solimp="2 1 0.01" solref="0.01 1" friction="1 0.005 0.0001"
                  pos="0 0 0" size="0.015 0.015 0.015" type="box" name="blue_cube" rgba="0.2 0.2 0.8 1" />
        </body>
        <!-- white plate on the table as goal. -->
        <body name="goal" pos="-0.2 0.4 0.05">
            <joint name="goal" type="free" frictionloss="0.01" />
            <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002" />
            <geom condim="4" solimp="2 1 0.01" solref="0.01 1" friction="1 0.005 0.0001" pos="0 0 0" size="0.02 0.02 0.001" type="box" name="goal" rgba="1 1 1 1" />
        </body>

        <!-- Front camera positioned at specified distance with 35-degree tilt -->
        <camera name="front_camera" pos="0 0.7 0.25" quat="0.906308 -0.422618 0 0" fovy="120" mode="targetbody" target="base"/>
        
        <!-- Front close camera for close-up teleoperation -->
        <camera name="front_close" pos="0 0.6 0.22" quat="0.906308 -0.422618 0 0" fovy="80" mode="targetbody" target="base"/>
        
        <!-- Overview camera positioned directly above table center for debugging -->
        <camera name="overview_camera" pos="0 0.4 0.5" quat="1 0 0 0" fovy="110" mode="fixed"/>

        <!-- Diagonal Camera positioned diagonal front positon from robot -->
        <camera name="diagonal_camera" pos="-0.2 0.6 0.2" fovy="110" mode="targetbody" target="base"/>
    </worldbody>

    <!-- Additional assets -->
    <asset>
        <material name="table_material" reflectance="0" rgba="0.2 0.2 0.2 1"/>
        <material name="target_material" reflectance="0" rgba="0.8 0.2 0.2 0.7"/>
        <material name="object_material" reflectance="0" rgba="0.2 0.8 0.2 1"/>
    </asset>

    <!-- Lighting setup -->
    <worldbody>
        <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='-1 -1 1'
               dir='1 1 -1'/>
        <light directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='1 -1 1' dir='-1 1 -1'/>
        <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='0 1 1'
               dir='0 -1 -1'/>
    </worldbody>

    <!-- Visual settings -->
    <visual>
        <map fogstart="1.5" fogend="5" force="0.1" znear="0.1"/>
        <quality shadowsize="4096" offsamples="4"/>
        <headlight ambient="0.4 0.4 0.4"/>
    </visual>

    <!-- Physics settings -->
    <option timestep='0.002' iterations="50" tolerance="1e-10" solver="Newton" jacobian="dense" cone="elliptic"/>
    
    <!-- Sensors for proprioception -->
    <sensor>
        <!-- End effector position and orientation -->
        <framepos name="gripper_pos_sensor" objtype="site" objname="gripperframe"/>
        <framequat name="gripper_quat_sensor" objtype="site" objname="gripperframe"/>
    </sensor>
    
</mujoco>